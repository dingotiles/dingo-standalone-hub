<div class="col-md-4">
  <div class="x_panel <%= cluster.state %>">
    <div class="x_title">
      <h2><%= cluster.name %> <small>cluster</small></h2>
      <ul class="nav navbar-right panel_toolbox">
        <li><a class="collapse-link"><i class="fa fa-chevron-up"></i></a>
        </li>
      </ul>
      <div class="clearfix"></div>
    </div>
    <div class="x_content">
      <% cluster.cluster_nodes.limit(ClustersController.limit_node_events).order("created_at DESC").each do |node| -%>
      <article class="media event">
        <div class="media-body">
          <a class="title" href="#"><%= node.name %></a>
          <p>Created: <%= time_ago_in_words(node.created_at) %> ago</p>
          <p>State: <%= node.state %></p>
          <p>Image version: v<%= node.image_version %></p>
        </div>
      </article>
      <% end -%>
    </div>
  </div>
</div>
